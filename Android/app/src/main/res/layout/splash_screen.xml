<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SplashScreen"
    android:background="#ff9c9a9d">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#ccf1ef98">

        <ImageView
            android:layout_width="134dp"
            android:layout_height="106dp"
            android:id="@+id/imageView"
            android:src="@drawable/heimdall_logo"
            android:contentDescription="@string/logo"
            android:background="#daffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="@string/passcode_string"
            android:gravity="center"
            android:textAlignment="center"
            android:width="@dimen/activity_horizontal_margin"
            android:elegantTextHeight="false"
            android:typeface="normal"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="20sp"
            android:layout_above="@+id/buttons_clicked"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_clicked"
            android:numStars="4"
            android:isIndicator="true"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal"
            android:id="@+id/gridLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:text="1"
                android:id="@+id/buttonOne"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:text="2"
                android:id="@+id/buttonTwo"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:text="3"
                android:id="@+id/buttonThree"
                android:layout_row="0"
                android:layout_column="2" />

            <Button
                android:text="4"
                android:id="@+id/buttonFour"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:text="5"
                android:id="@+id/buttonFive"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:text="6"
                android:id="@+id/buttonSix"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:text="7"
                android:id="@+id/buttonSeven"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:text="8"
                android:id="@+id/buttonEight"
                android:layout_row="2"
                android:layout_column="1" />

            <Button
                android:text="9"
                android:id="@+id/buttonNine"
                android:layout_row="2"
                android:layout_column="2" />

            <Button
                android:text="0"
                android:id="@+id/buttonZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="â†"
                    android:id="@+id/buttonErase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
            </LinearLayout>

        </GridLayout>

    </RelativeLayout>

</RelativeLayout>
