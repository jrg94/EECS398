<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SplashScreen"
    android:background="#ff9c9a9d">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ccf1ef98">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/heimdall_logo_edited"
                    android:contentDescription="@string/logo"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heimdall"
                        android:id="@+id/lock_name_text"
                        android:layout_alignParentTop="true"
                        android:layout_alignEnd="@+id/buttons_clicked"
                        android:layout_gravity="left"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Lock System"
                        android:id="@+id/lock_detail_text"
                        android:layout_gravity="left"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passcode_text"
                android:text="@string/passcode_string"
                android:gravity="center"
                android:textAlignment="center"
                android:width="@dimen/activity_horizontal_margin"
                android:elegantTextHeight="false"
                android:typeface="normal"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="20sp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttons_clicked"
                android:numStars="4"
                android:isIndicator="true"
                android:layout_gravity="center_horizontal" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:orientation="horizontal"
                android:id="@+id/gridLayout">

                <Button
                    android:text="1"
                    android:id="@+id/buttonOne"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:text="2"
                    android:id="@+id/buttonTwo"
                    android:layout_row="0"
                    android:layout_column="1" />

                <Button
                    android:text="3"
                    android:id="@+id/buttonThree"
                    android:layout_row="0"
                    android:layout_column="2" />

                <Button
                    android:text="4"
                    android:id="@+id/buttonFour"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Button
                    android:text="5"
                    android:id="@+id/buttonFive"
                    android:layout_row="1"
                    android:layout_column="1" />

                <Button
                    android:text="6"
                    android:id="@+id/buttonSix"
                    android:layout_row="1"
                    android:layout_column="2" />

                <Button
                    android:text="7"
                    android:id="@+id/buttonSeven"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Button
                    android:text="8"
                    android:id="@+id/buttonEight"
                    android:layout_row="2"
                    android:layout_column="1" />

                <Button
                    android:text="9"
                    android:id="@+id/buttonNine"
                    android:layout_row="2"
                    android:layout_column="2" />

                <ImageButton
                    android:id="@+id/imageButtonSettings"
                    android:src="@drawable/gear"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:contentDescription="gear"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:elevation="2dp" />

                <Button
                    android:text="0"
                    android:id="@+id/buttonZero"
                    android:layout_row="3"
                    android:layout_column="1" />

                <Button
                    android:text="â†"
                    android:id="@+id/buttonErase"
                    android:textSize="20dp"
                    android:layout_row="3"
                    android:layout_column="2" />

            </GridLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
