<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SplashScreen"
    android:background="#ff9c9a9d">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#ccf1ef98">

        <ImageView
            android:layout_width="134dp"
            android:layout_height="106dp"
            android:id="@+id/imageView"
            android:src="@drawable/heimdall_logo"
            android:contentDescription="@string/logo"
            android:background="#daffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:id="@+id/editText"
            android:text="@string/passcode_string"
            android:gravity="center"
            android:textAlignment="center"
            android:width="@dimen/activity_horizontal_margin"
            android:elegantTextHeight="false"
            android:typeface="normal"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_clicked"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:numStars="4" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="1"
            android:id="@+id/buttonOne" />

        <Button
            android:text="2"
            android:id="@+id/buttonTwo" />

        <Button
            android:text="3"
            android:id="@+id/buttonThree" />

        <Button
            android:text="4"
            android:id="@+id/buttonFour" />

        <Button
            android:text="5"
            android:id="@+id/buttonFive" />

        <Button
            android:text="6"
            android:id="@+id/buttonSix" />

        <Button
            android:text="7"
            android:id="@+id/buttonSeven" />

        <Button
            android:text="8"
            android:id="@+id/buttonEight" />

        <Button
            android:text="9"
            android:id="@+id/buttonNine" />

    </GridLayout>

</RelativeLayout>
